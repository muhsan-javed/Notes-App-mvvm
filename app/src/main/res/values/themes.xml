<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesAppmvvm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#222222</item>
        <item name="colorOnPrimary">#222222</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#222222</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#222222</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>